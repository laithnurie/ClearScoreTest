<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/score_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/ring_bg"
        android:progressDrawable="@drawable/progress_bg"
        android:rotation="-90"
        tools:max="500"
        tools:progress="100" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_credit_score_is"
            android:textColor="@color/black"
            android:textSize="@dimen/message_text_size" />

        <TextView
            android:id="@+id/score_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cs_yellow"
            android:textSize="@dimen/score_text_size"
            tools:text="500" />

        <TextView
            android:id="@+id/bottom_message_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/message_text_size"
            tools:text="out of 700" />

    </LinearLayout>

</merge>